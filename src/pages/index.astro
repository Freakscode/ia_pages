<style>
	main {
		min-height: 100vh;
		background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 2rem 4rem;
		position: fixed;
		width: calc(100% - 8rem);
		top: 0;
		z-index: 100;
		background: rgba(32, 26, 63, 0.8);
		backdrop-filter: blur(10px);
	}

	.logo {
		font-size: 2rem;
		letter-spacing: 0.2em;
		color: var(--color-text);
	}

	.nav-links {
		display: flex;
		gap: 2rem;
		align-items: center;
	}

	.nav-links a {
		color: var(--color-text);
		text-decoration: none;
		font-size: 1rem;
		transition: color 0.3s ease;
	}

	.nav-links a:hover {
		color: var(--color-accent);
	}

	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 4rem;
		position: relative;
		overflow: hidden;
	}

	.hero-content {
		max-width: 600px;
		z-index: 1;
	}

	h1 {
		font-size: 4.5rem;
		margin: 0;
		line-height: 1.1;
		background: linear-gradient(135deg, #fff, #6E4BFF);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		letter-spacing: 0.05em;
	}

	.hero-stats {
		display: flex;
		gap: 3rem;
		margin: 3rem 0;
	}

	.stat {
		display: flex;
		flex-direction: column;
	}

	.number {
		font-size: 2rem;
		font-weight: 700;
		color: var(--color-accent);
	}

	.label {
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.6);
	}

	.primary-button {
		background: linear-gradient(135deg, var(--color-accent), #9B6FFF);
		border: none;
		padding: 1rem 2.5rem;
		color: white;
		font-size: 1.1rem;
		border-radius: 30px;
		cursor: pointer;
		transition: transform 0.3s ease;
		font-family: 'Space Grotesk', sans-serif;
	}

	.primary-button:hover {
		transform: translateY(-2px);
	}

	.cta-button {
		background: rgba(110, 75, 255, 0.2);
		border: 1px solid var(--color-accent);
		padding: 0.8rem 1.5rem;
		color: white;
		font-size: 0.9rem;
		border-radius: 25px;
		cursor: pointer;
		transition: all 0.3s ease;
		font-family: 'Space Grotesk', sans-serif;
	}

	.cta-button:hover {
		background: var(--color-accent);
	}

	.hero-image {
		position: relative;
		width: 500px;
		height: 500px;
	}

	.glow-circle {
		position: absolute;
		width: 400px;
		height: 400px;
		border-radius: 50%;
		background: linear-gradient(135deg, rgba(110, 75, 255, 0.3), rgba(155, 111, 255, 0.1));
		filter: blur(60px);
		animation: float 6s ease-in-out infinite;
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	.categories {
		padding: 8rem 4rem;
		background: linear-gradient(180deg, var(--color-primary), var(--color-secondary));
		position: relative;
	}

	.categories::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
	}

	.categories-header {
		text-align: center;
		margin-bottom: 6rem;
	}

	.categories h2 {
		font-size: 3rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #fff, #6E4BFF);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.categories-subtitle {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.6);
		max-width: 600px;
		margin: 0 auto;
	}

	.categories-grid {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1.5rem;
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.category-card {
		background: rgba(0, 0, 0, 0.2);
		border-radius: 15px;
		padding: 1.5rem;
		transition: all 0.3s ease;
		cursor: pointer;
		position: relative;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		min-height: 160px;
	}

	.category-content {
		display: flex;
		gap: 1rem;
		align-items: flex-start;
	}

	.category-text {
		flex: 1;
	}

	.category-hover {
		margin-top: 1.5rem;
		opacity: 0;
		transform: translateY(10px);
		transition: all 0.3s ease;
	}

	.category-card:hover .category-hover {
		opacity: 1;
		transform: translateY(0);
	}

	.learn-more {
		font-size: 0.9rem;
		font-weight: 500;
		letter-spacing: 0.05em;
		text-transform: uppercase;
	}

	.category-icon {
		font-size: 2rem;
		line-height: 1;
	}

	.category-card h3 {
		font-size: 1.2rem;
		margin: 0 0 0.5rem;
		color: var(--color-text);
	}

	.category-card p {
		font-size: 0.9rem;
		color: rgba(255, 255, 255, 0.6);
		margin: 0;
	}

	.card-1 {
		border: 2px solid #EAAA17;
	}
	.card-1:hover {
		background: rgba(234, 170, 23, 0.1);
	}
	.card-1 .learn-more {
		color: #EAAA17;
	}

	.card-2 {
