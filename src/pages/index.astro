---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { categories } from '../data/categories';
---

<Layout title="Futuristic Landing">
	<main>
		<nav>
			<div class="logo">
				<img src="/ia_pages/logos/logo.png" alt="Logo" class="nav-logo" />
			</div>
		</nav>

		<section class="hero">
			<div class="hero-content">
				<h1>Descubre el Poder de la IA</h1>
				<p class="hero-description">
					Explora nuestra colección curada de las mejores herramientas de inteligencia artificial. 
					Desde diseño hasta programación, encuentra la herramienta perfecta para potenciar tu creatividad y productividad.
				</p>
				<div class="hero-stats">
					<div class="stat">
						<span class="stat-number">50+</span>
						<span class="stat-label">Herramientas IA</span>
					</div>
					<div class="stat">
						<span class="stat-number">6</span>
						<span class="stat-label">Categorías</span>
					</div>
					<div class="stat">
						<span class="stat-number">100%</span>
						<span class="stat-label">Gratuito</span>
					</div>
				</div>
				<div class="hero-cta">
					<button class="explore-button">
						Explorar Herramientas
						<span class="button-icon">→</span>
					</button>
				</div>
			</div>
		</section>

		<section class="categories" id="categories">
			<div class="line-container"></div>
			<div class="neon-overlay"></div>
			<div class="section-indicator"></div>
			<div class="categories-header">
				<h2 class="polygrapher">EXPLORE OUR CATEGORIES</h2>
				<p class="categories-subtitle">Discover our comprehensive suite of creative tools and services</p>
			</div>
			<div class="categories-grid">
				{categories.map(category => (
					<a href={`/ia_pages${category.url}`} class="category-link">
						<Card 
							title={category.title}
							description={category.description}
							icon={category.icon}
							cardClass={category.cardClass}
						/>
					</a>
				))}
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		min-height: 100vh;
		background: linear-gradient(135deg, rgba(26, 27, 38, 0.2), rgba(35, 36, 51, 0.2)), 
					url('/ia_pages/images/backscreen.png');
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		position: relative;
	}

	/* Ajustamos el overlay para que sea más sutil */
	main::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
		opacity: 0.3; /* Reducido para ver mejor el fondo */
		pointer-events: none;
		z-index: 0;
	}

	/* Aseguramos que el contenido esté por encima */
	nav, .hero, .categories {
		position: relative;
		z-index: 2;
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 2rem 4rem;
		position: fixed;
		width: calc(100% - 8rem);
		top: 0;
		z-index: 100;
		background: rgba(32, 26, 63, 0.8);
		backdrop-filter: blur(10px);
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.nav-logo {
		height: 40px;
		width: auto;
	}

	.logo-text {
		font-size: 2rem;
		letter-spacing: 0.2em;
		color: var(--color-text);
	}

	.hero {
		min-height: 80vh;
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 2rem;
		position: relative;
		overflow: hidden;
		background: linear-gradient(135deg, 
			rgba(26, 27, 38, 0.8), 
			rgba(35, 36, 51, 0.8)
		);
		border-bottom: 1px solid rgba(110, 75, 255, 0.2);
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background: url('/ia_pages/images/grid.png') repeat;
		opacity: 0.1;
		pointer-events: none;
	}

	.hero-content {
		max-width: 800px;
		position: relative;
		z-index: 2;
		padding: 2rem;
		background: rgba(26, 27, 38, 0.5);
		border-radius: 20px;
		border: 1px solid rgba(110, 75, 255, 0.1);
		backdrop-filter: blur(10px);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		margin-bottom: 1.5rem;
		background: linear-gradient(135deg, #fff, #6E4BFF);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		text-shadow: 0 0 30px rgba(110, 75, 255, 0.3);
	}

	.hero-description {
		font-size: 1.2rem;
		line-height: 1.6;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 3rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.hero-cta {
		margin-top: 3rem;
	}

	.explore-button {
		background: linear-gradient(135deg, #6E4BFF, #9B6FFF);
		border: none;
		padding: 1rem 2.5rem;
		color: white;
		font-size: 1.1rem;
		border-radius: 30px;
		cursor: pointer;
		transition: all 0.3s ease;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
	}

	.explore-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 5px 15px rgba(110, 75, 255, 0.4);
	}

	.button-icon {
		transition: transform 0.3s ease;
	}

	.explore-button:hover .button-icon {
		transform: translateX(5px);
	}

	.hero-stats {
		display: flex;
		justify-content: center;
		gap: 4rem;
		margin-top: 3rem;
	}

	.stat {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 1rem;
		background: rgba(110, 75, 255, 0.1);
		border-radius: 15px;
		min-width: 120px;
	}

	.stat-number {
		font-size: 2.5rem;
		font-weight: 700;
		color: #fff;
		text-shadow: 0 0 20px rgba(110, 75, 255, 0.5);
	}

	.stat-label {
		font-size: 1rem;
		color: rgba(255, 255, 255, 0.7);
		margin-top: 0.5rem;
	}

	.primary-button {
		background: linear-gradient(135deg, var(--color-accent), #9B6FFF);
		border: none;
		padding: 1rem 2.5rem;
		color: white;
		font-size: 1.1rem;
		border-radius: 30px;
		cursor: pointer;
		transition: transform 0.3s ease;
		font-family: 'Space Grotesk', sans-serif;
	}

	.primary-button:hover {
		transform: translateY(-2px);
	}

	.hero-image {
		position: relative;
		width: 500px;
		height: 500px;
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	.categories {
		padding: 8rem 4rem;
		position: relative;
		background: none;
	}

	/* Contenedor para la línea con máscaras en los extremos */
	.line-container {
		position: absolute;
		top: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 90%;
		height: 1px;
		overflow: hidden;
		mask: linear-gradient(
			90deg,
			transparent,
			black 20px,
			black calc(100% - 20px),
			transparent
		);
		-webkit-mask: linear-gradient(
			90deg,
			transparent,
			black 20px,
			black calc(100% - 20px),
			transparent
		);
	}

	/* Línea base */
	.line-container::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 1px;
		background: linear-gradient(
			90deg, 
			transparent,
			rgba(110, 75, 255, 0.3),
			rgba(155, 111, 255, 0.5),
			rgba(110, 75, 255, 0.3),
			transparent
		);
		box-shadow: 
			0 0 15px rgba(110, 75, 255, 0.3),
			0 0 30px rgba(110, 75, 255, 0.1);
	}

	/* Elemento animado */
	.line-container::after {
		content: '';
		position: absolute;
		top: 0;
		left: -20%;
		width: 40%;
		height: 1px;
		background: linear-gradient(
			90deg,
			transparent 0%,
			rgba(110, 75, 255, 0.8) 20%,
			rgba(155, 111, 255, 1) 50%,
			rgba(110, 75, 255, 0.8) 80%,
			transparent 100%
		);
		box-shadow: 
			0 0 20px rgba(110, 75, 255, 0.8),
			0 0 40px rgba(110, 75, 255, 0.4),
			0 0 60px rgba(110, 75, 255, 0.2);
		animation: neonPulse 4s ease-in-out infinite;
		pointer-events: none;
	}

	@keyframes neonPulse {
		0% {
			left: -20%;
			opacity: 0;
		}
		20% {
			opacity: 1;
		}
		80% {
			opacity: 1;
		}
		100% {
			left: 80%;
			opacity: 0;
		}
	}

	.section-indicator {
		display: none;
	}

	.categories-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		max-width: 1400px;
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}

	.categories h2 {
		font-size: 3rem;
		margin-bottom: 1rem;
		background: linear-gradient(135deg, #fff, #6E4BFF);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		position: relative;
		z-index: 2;
	}

	.categories-header {
		text-align: center;
		margin-bottom: 6rem;
		position: relative;
		z-index: 2;
	}

	.categories-subtitle {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		max-width: 600px;
		margin: 0 auto;
		position: relative;
		z-index: 2;
	}

	.category-link {
		text-decoration: none;
		color: inherit;
		display: block;
	}

	@media (max-width: 768px) {
		h1 {
			font-size: 3rem;
		}

		.hero-description {
			font-size: 1rem;
			padding: 0 1rem;
		}

		.hero-stats {
			gap: 1rem;
			flex-direction: column;
			align-items: center;
		}

		.stat {
			width: 80%;
			max-width: 200px;
		}

		.stat-number {
			font-size: 2rem;
		}

		.hero-content {
			padding: 1.5rem;
			margin: 1rem;
		}
	}
</style>
