	}
	.card-6:hover {
		background: rgba(80, 211, 80, 0.1);
	}
	.card-6 .learn-more {
		color: #50D350;
	}

	.card-7 {
		border: 2px solid #15616E;
	}
	.card-7:hover {
		background: rgba(21, 97, 110, 0.1);
	}
	.card-7 .learn-more {
		color: #15616E;
	}

	.card-8 {
		border: 2px solid #6E4BFF;
	}
	.card-8:hover {
		background: rgba(110, 75, 255, 0.1);
	}
	.card-8 .learn-more {
		color: #6E4BFF;
	}

	@media (max-width: 1200px) {
		.categories-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}

	@media (max-width: 900px) {
		.categories-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 768px) {
		nav {
			padding: 1.5rem 2rem;
			width: calc(100% - 4rem);
		}

		.nav-links {
			display: none;
		}

		.hero {
			flex-direction: column;
			padding: 6rem 2rem 2rem;
			text-align: center;
		}

		h1 {
			font-size: 3rem;
		}

		.hero-stats {
			justify-content: center;
		}

		.hero-image {
			width: 100%;
			height: 300px;
			margin-top: 2rem;
		}

		.glow-circle {
			width: 300px;
			height: 300px;
			left: 50%;
			transform: translateX(-50%);
		}
	}

	@media (max-width: 600px) {
		.categories-grid {
			grid-template-columns: 1fr;
		}

		.category-card {
			min-height: 140px;
		}

		.categories {
			padding: 4rem 2rem;
		}

		.categories h2 {
			font-size: 2rem;
			margin-bottom: 1rem;
		}
	}
</style>