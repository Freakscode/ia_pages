---
interface Props {
    title: string;
    description: string;
    icon: string;
    cardClass: string;
}

const { title, description, icon, cardClass } = Astro.props;
---

<div class={`category-card ${cardClass}`}>
    <div class="category-content">
        <div class="content-wrapper">
            <div class="category-icon">{icon}</div>
            <div class="category-text">
                <h3>{title}</h3>
                <p>{description}</p>
            </div>
        </div>
        <div class="card-footer">
            <span class="view-more">Ver más →</span>
        </div>
    </div>
</div>

<style>
    .category-card {
        background: rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        padding: 1.5rem;
        transition: all 0.3s ease;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        aspect-ratio: 4/3;
    }

    .category-content {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .content-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 1rem;
    }

    .category-icon {
        font-size: 2.5rem;
        line-height: 1;
    }

    .category-text {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    .card-footer {
        margin-top: 1rem;
        text-align: center;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .view-more {
        font-size: 0.9rem;
        font-weight: 500;
        letter-spacing: 0.05em;
        text-transform: uppercase;
    }

    h3 {
        font-size: 1.2rem;
        margin: 0;
        color: var(--color-text);
    }

    p {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
        margin: 0;
        line-height: 1.4;
    }

    /* Estilos específicos para cada categoría */
    .card-1 { border: 2px solid #EAAA17; }
    .card-1 .view-more { color: #EAAA17; }

    .card-2 { border: 2px solid #E53223; }
    .card-2 .view-more { color: #E53223; }

    .card-3 { border: 2px solid #E3DE00; }
    .card-3 .view-more { color: #E3DE00; }

    .card-4 { border: 2px solid #951762; }
    .card-4 .view-more { color: #951762; }

    .card-5 { border: 2px solid #3CE5A8; }
    .card-5 .view-more { color: #3CE5A8; }

    .card-6 { border: 2px solid #50D350; }
    .card-6 .view-more { color: #50D350; }

    .card-7 { border: 2px solid #15616E; }
    .card-7 .view-more { color: #15616E; }

    .card-8 { border: 2px solid #6E4BFF; }
    .card-8 .view-more { color: #6E4BFF; }

    /* Efecto hover suave para las cards */
    .category-card:hover {
        transform: translateY(-5px);
    }
</style>
