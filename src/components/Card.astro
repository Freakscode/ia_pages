---
interface Props {
    title: string;
    body: string;
    href: string;
    icon?: string;
    cardClass?: string; // Añadimos la prop para la clase de color
}

const { href, title, body, icon, cardClass } = Astro.props;
---

<li class={`link-card ${cardClass}`}>
    <a href={href}>
        <div class="card-content">
            {icon && <div class="icon">{icon}</div>}
            <div class="text-content">
                <h2>{title}</h2>
                <p>{body}</p>
                <span class="ver-mas">Ver más &rarr;</span>
            </div>
        </div>
    </a>
</li>

<style>
    /* Estilos base */
    .link-card {
        list-style: none;
        display: flex;
        background-color: rgba(0, 0, 0, 0.2);
        border-radius: 15px;
        transition: all 0.3s ease;
        width: 100%;
        height: 100%;
    }

    .link-card a {
        text-decoration: none;
        color: white;
        width: 100%;
        height: 100%;
    }

    .card-content {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 200px;
        padding: 1.5rem;
        width: 100%;
        box-sizing: border-box;
    }

    .icon {
        font-size: 3rem;
        margin-bottom: 1rem;
        text-align: center;
    }

    .text-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }

    h2 {
        font-size: 1.25rem;
        margin: 0;
        color: white;
        text-align: center;
    }

    p {
        margin: 0;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        text-align: center;
    }

    .ver-mas {
        margin-top: auto;
        display: inline-block;
        color: inherit;
        font-weight: bold;
        padding-top: 1rem;
    }

    /* Color específico para cada categoría */
    .link-card.color-1 {
        border: 2px solid #EAAA17;
    }
    .link-card.color-1:hover {
        background: rgba(234, 170, 23, 0.1);
    }

    .link-card.color-2 {
        border: 2px solid #E53223;
    }
    .link-card.color-2:hover {
        background: rgba(229, 50, 35, 0.1);
    }

    .link-card.color-3 {
        border: 2px solid #E3DE00;
    }
    .link-card.color-3:hover {
        background: rgba(227, 222, 0, 0.1);
    }

    .link-card.color-4 {
        border: 2px solid #951762;
    }
    .link-card.color-4:hover {
        background: rgba(149, 23, 98, 0.1);
    }

    .link-card.color-5 {
        border: 2px solid #3CE5A8;
    }
    .link-card.color-5:hover {
        background: rgba(60, 229, 168, 0.1);
    }

    .link-card.color-6 {
        border: 2px solid #50D350;
    }
    .link-card.color-6:hover {
        background: rgba(80, 211, 80, 0.1);
    }

    .link-card.color-7 {
        border: 2px solid #15616E;
    }
    .link-card.color-7:hover {
        background: rgba(21, 97, 110, 0.1);
    }

    .link-card.color-8 {
        border: 2px solid #4A90E2;
    }
    .link-card.color-8:hover {
        background: rgba(74, 144, 226, 0.1);
    }

    /* Resto de los estilos */
    .card-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        padding: 1.5rem;
    }

    .icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .text-content {
        text-align: center;
        width: 100%;
    }

    h2 {
        font-size: 1.25rem;
        margin: 0;
        color: white;
        margin-bottom: 0.5rem;
    }

    p {
        margin: 0;
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .ver-mas {
        display: inline-block;
        color: inherit;
        font-weight: bold;
    }

    a {
        text-decoration: none;
        color: white;
        width: 100%;
    }
</style>
